@model List<NewQA.Models.CheckModel>
@{
    ViewBag.Title = "AskQuestion";
}

<h2>AskQuestion</h2>

<div>
    <h3>Your Question</h3>
    <div>
        @using (Html.BeginForm())
        {

            <div>
                Title:@Html.TextBox("QuestionTitle")

            </div>
            <div>
                Body:@Html.TextBox("QuestionBody")
            </div>

            for (var i = 0; i < Model.Count(); i++)
            {
                <table>
                    <tr>
                        <td>
                            @Html.HiddenFor(it=>it[i].Id) 
                            @Html.DisplayFor(it => it[i].Name)
                        </td>
                        <td>
                            @Html.CheckBoxFor(it=>it[i].Checked)
                        </td>
                    </tr>
                </table>
            }
            <input type="submit" value="Post A Question" class="btn btn-default" />
        }

       



    </div>

</div>